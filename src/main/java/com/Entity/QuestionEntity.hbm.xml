<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.Entity.QuestionEntity" table="question" schema="knowledge_sharing">
        <id name="questionId">
            <column name="questionId" sql-type="int(255)"/>
        </id>
        <property name="questionTitle">
            <column name="questionTitle" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="questionContent">
            <column name="questionContent" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="questionTypeId">
            <column name="questionTypeId" sql-type="int(255)" not-null="true"/>
        </property>
        <property name="questionReward">
            <column name="questionReward" sql-type="int(255)" not-null="true"/>
        </property>
        <property name="questionIsAnswer">
            <column name="questionIsAnswer" sql-type="int(255)" not-null="true"/>
        </property>
        <property name="questionTime">
            <column name="questionTime" sql-type="datetime" not-null="true"/>
        </property>
        <property name="userId">
            <column name="userId" sql-type="int(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>