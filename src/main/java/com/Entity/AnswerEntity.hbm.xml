<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.Entity.AnswerEntity" table="answer" schema="knowledge_sharing">
        <id name="answerId">
            <column name="answerId" sql-type="int(255)"/>
        </id>
        <property name="answerContent">
            <column name="answerContent" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="questionId">
            <column name="questionId" sql-type="int(255)" not-null="true"/>
        </property>
        <property name="userId">
            <column name="userId" sql-type="int(255)" not-null="true"/>
        </property>
        <property name="answerTime">
            <column name="answerTime" sql-type="datetime" not-null="true"/>
        </property>
        <property name="isFree">
            <column name="isFree" sql-type="smallint(6)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>