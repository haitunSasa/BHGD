<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.Entity.FollowEntity" table="follow" schema="knowledge_sharing">
        <id name="followId">
            <column name="followId" sql-type="int(255)"/>
        </id>
        <property name="userId">
            <column name="userId" sql-type="int(255)" not-null="true"/>
        </property>
        <property name="followUserId">
            <column name="followUserId" sql-type="int(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>